<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgContent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".25"
        android:background="@color/colorbackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_icon_short"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            app:srcCompat="@drawable/img4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".75"
        android:background="@color/bgTitleRight"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textview_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:text="App Name"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

<!--            <TextView
                android:id="@+id/textview_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="right|center_vertical"
                android:text="Installed"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp" />
-->
            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/textview_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="right|center_vertical"
                android:text="Installed"
                app:bootstrapBrand="success"
                app:fontAwesomeIcon="fa_android"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/title_from_to_dots_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:src="@color/contentDividerLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
             <TextView
                    android:id="@+id/textview_description"
                    style="@style/Grey"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".90"
                    android:fadingEdge="horizontal"
                    android:paddingBottom="15dp"
                    android:text="asbafs asdfys as dfasdyfasdf asd fyasdf asdfaysdfa sdfashdfas"
                    android:textSize="12sp" />
                <com.beardedhen.androidbootstrap.AwesomeTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".05"
                    app:bootstrapBrand="regular"
                    app:fontAwesomeIcon="fa_angle_down" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/button_install_short"
                style="@style/wrapping_button"
                android:layout_weight=".3"
                android:enabled="false"
                app:fontAwesomeIcon="fa_download"
                app:bootstrapBrand="warning"
                app:roundedCorners="true"
                app:showOutline="true" />


            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/button_update_short"
                style="@style/wrapping_button"
                android:layout_weight=".3"
                app:fontAwesomeIcon="fa_refresh"
                app:bootstrapBrand="warning"
                app:roundedCorners="true"
                app:showOutline="true" />


            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/button_uninstall_short"
                style="@style/wrapping_button"
                android:layout_weight=".3"
                app:fontAwesomeIcon="fa_trash"
                app:bootstrapBrand="warning"
                app:roundedCorners="true"
                app:showOutline="true" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>